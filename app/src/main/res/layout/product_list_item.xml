    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/background_product">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:src="@drawable/background_product"
                app:tint="@color/white" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="25dp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="25dp"/>


        <ProgressBar
            android:id="@+id/progressBarList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/productImage"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="44dp"
            android:foregroundGravity="center"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:text="Nume"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/CATEGORIE"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/productPriceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:paddingTop="20dp"
            android:text="RON"
            android:textColor="@color/green" />


        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="40dp"
            android:padding="15dp"
            android:paddingTop="20dp"
            android:textColor="@color/green" />


    </RelativeLayout>


</LinearLayout>