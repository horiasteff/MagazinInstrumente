<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ClientsChartActivity"
    tools:ignore="MissingConstraints">

    <ImageView
        app:layout_constraintBottom_toTopOf="@+id/clientsListView"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/project_logo"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btnChartGeneral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/esc_button"
        app:layout_constraintBottom_toTopOf="@+id/clientsListView"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/grafic_general"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/clientsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        >
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>